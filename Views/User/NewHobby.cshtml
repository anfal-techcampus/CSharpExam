@model Hobby;

<form asp-action="AddNewHobby" asp-controller="User" class="shadow-lg p-4 mb-5 bg-white rounded border">
    <h1 class="text-center text-muted">Create a Hobby</h1>
    <div class="form-group">
        <label asp-for="HobbyName">Name </label>
        <input asp-for="HobbyName" class="form-control">
        <span class="text-danger" asp-validation-for="HobbyName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <Button class="btn btn-outline-dark">Create</Button>
</form>